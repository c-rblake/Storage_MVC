@model IEnumerable<Storage.Models.ProductViewModel>

@{
    ViewData["Title"] = "NewView";
}

<h1>NewView</h1>
<!-->Take from bootstrap</!-->
<form asp-action="Filter" method="get"> 
    <div class="input-group mb-3">
        <input type="text" name="category" class="form-control" placeholder="Filter on Category"/>
        <div>
            <button type="submit" class="btn btn-outline-danger" id="button-addon">Filter</button>
        </div>
    </div>
</form>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryValue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InventoryValue)
            </td>
            <td>
|
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |

            </td>
        </tr>
}
    </tbody>
</table>
